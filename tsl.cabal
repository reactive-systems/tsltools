library

  ghc-options:
    -Wall
    -Wno-name-shadowing
    -fno-ignore-asserts

  build-depends:
      base >=4.7 && <4.13
    , directory >= 1.3
    , filepath >= 1.4
    , parsec >=3.1 && <3.2
    , array >=0.5 && <0.6
    , mtl >=2.2 && <2.3
    , containers >=0.5 && <0.7
    , QuickCheck
    , process >= 1.6.3.0
    , ansi-terminal >= 0.6

  exposed-modules:
    TSL
    TSLCoreGenerator

  other-modules:
    TSL.Binding
    TSL.Error
    TSL.Expression
    TSL.Specification
    TSL.StringMap
    TSL.SymbolTable
    TSL.Types
    TSL.Parser
    TSL.Parser.Data
    TSL.Parser.Expression
    TSL.Parser.Global
    TSL.Parser.Utils
    TSL.Reader
