    -Wall
    -Wno-name-shadowing
    -threaded

  build-depends:
      tsl
    , base >= 4.7 && <4.13
    , directory >= 1.3
    , filepath >= 1.4
    , ansi-terminal >= 0.6
    , process 
    , optparse-applicative

  main-is:
    Main.hs

  other-modules:
    Utils
    PrintUtils
    EncodingUtils
    FileUtils

  default-language:
    Haskell2010

  hs-source-dirs:
    src/tools/tslcoregen
